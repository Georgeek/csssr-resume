.js-bar
	margin-top 63px // TEMP

	.slider
		margin-top 40px
		height 50px
		background url(../../assets/images/js-bar--line.png) no-repeat
		background-position -5px -25px
		background-size 100%

	#thumb
		position absolute
		top -15px
		width 20px
		height 14px
		cursor pointer
		background url(../images/sprites/icons.png) no-repeat
		background-position -99px 0
		border none

	&__block
		position relative
		padding-top 5px
	&__text
		position absolute
		max-width 175px
		&--last
			right 0

#lineCont
	margin 40px 0
	width 100%

#line
	position relative
	top 50%
	margin auto
	width 100%
	height 50px
	background url(../../assets/images/js-bar--line.png) no-repeat
	background-position -5px -25px

.span
	margin auto
	text-align center

.circle
	position absolute
	width 100%
	font-size 13px
	font-weight 700
	line-height 20px
	cursor pointer
	&:before
		position relative
		// width 20px
		// height 14px
		cursor pointer
		content ''
		background pink
		border none

	.popupSpan
		position absolute
		top 20px
		left -75px
		padding 10px
		display inline-block
		width auto
		height auto
		white-space nowrap
		color white
		transition all .1s ease-out

	&.hover:before, &.active:before
		display block

	&.hover .js-bar__text, &.active .js-bar__text
		display block
		background-color pink

	&.active .js-bar__text
		background-color pink
