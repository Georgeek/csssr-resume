.js-bar
	margin-top 52px // TEMP
	height 166px // TEMP

	.slider
		margin-top 40px
		height 50px
		background url(../../assets/images/js-bar--line.png) no-repeat
		background-position -5px -25px
		background-size 100%

	.thumb
		position relative
		top -13px
		left 14px
		width 20px
		height 14px
		cursor pointer
		background url(../images/sprites/icons.png) no-repeat
		background-position -98px 0
		border none

	&__block
		position relative
		padding-top 5px
	&__text
		position absolute
		width 200px
		font-size 14px
		font-weight 700
		&_0
			left 0
		&_25
			left 19%
		&_50
			left 48%
		&_100
			left 80%
