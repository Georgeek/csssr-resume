.gslider
	margin 40px 0
	width 100%

	&__thumb
		position absolute
		top -15px
		width 20px
		height 14px
		cursor pointer
		background url(../images/sprites/icons.png) no-repeat
		background-position -99px 0
		border none

	&__line
		position relative
		top 50%
		margin auto
		width 100%
		height 30px
		background url(../images/sprites/slider.png) no-repeat
		background-position -5px -25px

	&__span
		margin auto
		text-align center

	&__split
		position absolute
		width 100%
		font-size 13px
		font-weight 700
		line-height 20px
		cursor pointer

		&--middle:before
			position absolute
			top -25px
			width 20px
			height 12px
			cursor auto
			content ''
			background url(../images/sprites/slider.png) no-repeat
			background-position -5px -68px

	&__text
		position absolute
		max-width 175px
		&--last
			right 0
