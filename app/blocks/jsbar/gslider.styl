#thumb
	position absolute
	top -15px
	width 20px
	height 14px
	cursor pointer
	background url(../images/sprites/icons.png) no-repeat
	background-position -99px 0
	border none

#line
	position relative
	top 50%
	margin auto
	width 100%
	height 30px
	background url(../images/sprites/slider.png) no-repeat
	background-position -5px -25px

.span
	margin auto
	text-align center

.split
	position absolute
	width 100%
	font-size 13px
	font-weight 700
	line-height 20px
	cursor pointer

	&__text
		position absolute
		max-width 175px
		&--last
			right 0

	&--middle:before
		position absolute
		top -25px
		width 20px
		height 12px
		content ''
		background url(../images/sprites/slider.png) no-repeat
		background-position -5px -68px
		cursor auto
