.skill-data
	margin-top 68px
	&__form
		margin-top 27px
		padding-left: 25px
	&__block
		background: pink
		&__wrap
			margin-bottom 10px
		&__label
			position relative
			{$font_list}
		&__label:before
			position absolute
			left -25px
			size(19px, 20px)
			content ''
			background url(../images/sprites/icons.png)
			background-position -31px -51px
		&__input
			display none
			&-span1
				position relative
				top 3px
			&-span2
				position relative
				top 6px
		&__input[type='checkbox']:checked + .skill-data__block__label:before
			size(19px, 20px)
			background-position -2px -51px
#all
	position relative
	top 3px
#ok
	position relative
	top 6px
